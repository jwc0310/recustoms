<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/root_view">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#aaaaaa"
            android:overScrollMode="never"
            android:visibility="gone"/>

        <com.andy.recustomviews.views.XYFlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/scroll"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="scroll"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:singleLine="false"/>

        <Button
            android:id="@+id/launcher3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="launcher3"/>

        <Button
            android:id="@+id/all_apps"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="all_apps"/>

        <Button
            android:id="@+id/sendBroadcast"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="发送广播"/>

        <Button
            android:id="@+id/wifi_rel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="桥接"/>


        <Button
            android:id="@+id/app_debug"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="status"/>

        <Button
            android:id="@+id/app_screencap"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="截屏"/>

        <Button
            android:id="@+id/app_screencap2"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="截屏2"/>

        <Button
            android:id="@+id/app_device"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="设备加密"/>

        <TextView
            android:id="@+id/main_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <com.andy.recustomviews.views.MyGLView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>